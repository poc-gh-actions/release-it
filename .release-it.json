{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "tagName": "v${version}",
    "tagAnnotation": "v${version}",
    "commitMessage": "chore(release): ${version}",
    "requireCleanWorkingDir": false
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "ğŸš€ Features"
          },
          {
            "type": "fix",
            "section": "Bug Fixes"
          },
          {
            "type": "docs",
            "section": "ğŸ“ Documentation",
            "label": "ğŸ“ Documentation"
          },
          {
            "type": "style",
            "section": "Code Style Changes",
            "hidden": true
          },
          {
            "type": "refactor",
            "section": "âš™ï¸ Code Refactoring",
            "label": "âš™ï¸ Refactor"
          },
          {
            "type": "perf",
            "section": "ğŸš€ Performance Improvements",
            "label": "ğŸš€ Performance"
          },
          {
            "type": "test",
            "section": "Tests",
            "hidden": true
          },
          {
            "type": "build",
            "section": "Build System",
            "hidden": true
          },
          {
            "type": "ci",
            "section": "Continuous Integration",
            "hidden": false
          },
          {
            "type": "chore",
            "section": "Chores",
            "hidden": true
          }, 
          {}
        ]
      },
      "infile": "CHANGELOG.md"
      
    }
  }
}


{
    "name": "release-it",
    "version": "1.3.7",
    "scripts": {
        "release": "release-it --ci"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^8.0.1"
    },
    "release-it": {
        "git": {
          "commitMessage": "chore(release): ${version}",
          "tagAnnotation": "v${version}",
          "tagName": "v${version}"
        },
        "hooks": {
          "after:init": "npm test"
        },
        "github": {
          "release": true,
          "releaseName": "v${version}",
          "web": true
        }
    }    
}